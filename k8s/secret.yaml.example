apiVersion: v1
kind: Secret
metadata:
  name: database-credentials
  namespace: default
type: Opaque
stringData:
  # PostgreSQL Configuration
  POSTGRES_USER: "user"
  POSTGRES_PASSWORD: "password"
  
  # Note: Host and port are configured in the Job manifest
  # Databases will be auto-detected from migration files:
  # - migrations/postgres-product/ → product database
  # - migrations/postgres-user/ → user database
  # - migrations/postgres-order/ → order database
  # - migrations/mongo-product/ → product database
  # - migrations/mongo-analytics/ → analytics database
